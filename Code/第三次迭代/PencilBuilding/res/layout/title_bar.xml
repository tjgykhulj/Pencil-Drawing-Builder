<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/content"
    android:background="@color/activity_bg_color"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/title_bar"
        style="@style/my_title_bar_style"
        android:background="@drawable/bg_titlebar_main">
        <FrameLayout android:id="@+id/top_head_container"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <ImageView android:layout_gravity="center_vertical"
                android:id="@+id/title_bar_back"
                android:contentDescription="@string/app_name"
                android:background="@drawable/bg_head"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:scaleType="fitXY" />
        </FrameLayout>
        <ImageView android:gravity="center"
            android:id="@+id/title_bar_setting"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="12.0dip"
            android:src="@drawable/ic_setting"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/title_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</RelativeLayout>