<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="#464646">
    <include
        android:id="@+id/title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="边缘检测"
        android:textColor="@color/white"/>
    <RadioGroup
        android:gravity="center"
        android:id="@+id/operatorGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <RadioButton
            android:textColor="@color/white"
            android:id="@+id/sobel_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobel算子"
            android:layout_marginRight="40dp"/>
        <RadioButton
            android:textColor="@color/white"
            android:id="@+id/grads_operator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="梯度算子(推荐)"
            android:checked="true" />

    </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="弧线优化"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textview_dirnum"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="4"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:gravity="right"
            android:text="速度"/>
        <SeekBar
            android:id="@+id/seekbar_dirnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:max="10"
            android:progress="2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:text="质量"/>
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:text="拟真度"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/textview_size"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:gravity="right"
            android:text="速度"/>
        <SeekBar
            android:id="@+id/seekbar_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:max="5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_marginTop="6dp"
            android:text="质量"/>
    </LinearLayout>
        </LinearLayout>
</LinearLayout>
